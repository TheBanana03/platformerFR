<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when button is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#A064F6" /> <!-- Background color -->
            <stroke
                android:width="4dp"
            android:color="#FFFFFF" /> <!-- Glow color -->
            <size
                android:width="100dp"
                android:height="100dp" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FF6200EE" /> <!-- Background color -->
            <stroke
                android:width="2dp"
            android:color="#FFFFFF" /> <!-- Stroke color -->
            <size
                android:width="100dp"
                android:height="100dp" />
        </shape>
    </item>
</selector>
