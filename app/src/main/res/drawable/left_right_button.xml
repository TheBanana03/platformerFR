<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Left section (red) -->
    <item android:left="0dp" android:right="50dp"> <!-- Adjust size as needed -->
        <shape android:shape="rectangle">
            <solid android:color="#FF0000" /> <!-- Red color for left -->
        </shape>
    </item>

    <!-- Right section (blue) -->
    <item android:left="200dp" android:right="0dp"> <!-- Adjust size as needed -->
        <shape android:shape="rectangle">
            <solid android:color="#0000FF" /> <!-- Blue color for right -->
        </shape>
    </item>
</layer-list>